{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": ["NODE_ENV", "PROD"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**",
        ".vercel/**",
        ".nitro/**",
        ".wrangler/**",
        ".output/**",
        ".tanstack/**"
      ],
      "env": ["SERVER_*", "VITE_*"]
    },
    "//#quality": {
      "dependsOn": ["//#lint", "//#format"]
    },
    "//#quality:fix": {
      "dependsOn": ["//#lint:fix", "//#format"]
    },
    "//#lint": {},
    "//#lint:fix": {
      "cache": false
    },
    "//#format": {
      "cache": false
    },
    "//#format:check": {},
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "cache": false,
      "persistent": true
    },
    "preview": {
      "inputs": ["$TURBO_DEFAULT$"],
      "cache": false,
      "persistent": true
    }
  }
}
